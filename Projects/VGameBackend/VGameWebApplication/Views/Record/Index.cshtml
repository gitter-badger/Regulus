
@{
    ViewBag.Title = "Recode";
}

<h2>Recode</h2>

@model VGame.Project.FishHunter.Data.Account[]


    
@using (Html.BeginForm("Index", "Record", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return validateForm(this)" }))
{
    <div>
        <table>
            @foreach (var acc in Model)
            {
                <tr>
                    <td>@acc.Name</td>
                    @Html.Label("儲值金額")
                </tr>
            }
        </table>
    </div>
}


<div>
    @{
        using (Html.BeginForm("Index", "Record", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return validateForm(this)" }))
        {
            <div>
                <table>
                    @foreach (var acc in Model)
                    {
                        <tr>
                            <td>@acc.Name</td>
                            @Html.Label("儲值金額")
                        </tr>
                    }
                </table>
            </div>

            <input type="submit" value="確認" class="btn btn-default" />
        }
    }
</div>


